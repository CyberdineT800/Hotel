
@{
    ViewData["Title"] = "create";
}

@model Review

<h2>Create Review</h2>

<form asp-action="Create">
    <!-- Include form fields for creating a new Review -->
    <div class="form-group">
        <label asp-for="ReviewerName"></label>
        <input asp-for="ReviewerName" class="form-control" />
        <span asp-validation-for="ReviewerName"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comments"></label>
        <textarea asp-for="Comments" class="form-control"></textarea>
        <span asp-validation-for="Comments"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>


