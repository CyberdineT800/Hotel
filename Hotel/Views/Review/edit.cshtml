
@{
    ViewData["Title"] = "edit";
}

@model Review

<h2>Edit Review</h2>

<form asp-action="Edit">
    <!-- Include form fields for editing Review details -->
    <div class="form-group">
        <label asp-for="ReviewerName"></label>
        <input asp-for="ReviewerName" class="form-control" />
        <span asp-validation-for="ReviewerName"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comments"></label>
        <textarea asp-for="Comments" class="form-control"></textarea>
        <span asp-validation-for="Comments"></span>
    </div>

    <!-- Include other Review details as needed -->

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>


