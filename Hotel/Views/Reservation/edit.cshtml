
@{
    ViewData["Title"] = "edit";
}

@model Reservation

<h2>Edit Reservation</h2>

<form asp-action="Edit">
    <!-- Include form fields for editing Reservation details -->
    <div class="form-group">
        <label asp-for="CustomerName"></label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName"></span>
    </div>

    <div class="form-group">
        <label asp-for="CheckInDate"></label>
        <input asp-for="CheckInDate" class="form-control" />
        <span asp-validation-for="CheckInDate"></span>
    </div>

    <!-- Include other Reservation details as needed -->

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>


