@{
    ViewData["Title"] = "Create";
}

@model Room

<h2>Create Room</h2>

<form asp-action="Create" asp-controller="Room" method="post">
    <div class="form-group">
        <label asp-for="RoomNumber"></label>
        <input asp-for="RoomNumber" class="form-control" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span> <br />
    </div>

    <div class="form-group">
        <label asp-for="RoomType"></label>
        <select asp-for="RoomType" asp-items="@GetRoomTypes()" class="form-control">
            <option value="">Select Room Type</option>
        </select>
        <span asp-validation-for="RoomType" class="text-danger"></span> <br />
    </div>

    <div class="form-group">
        <label asp-for="PricePerNight"></label>
        <input type="number" asp-for="PricePerNight" class="form-control" />
        <span asp-validation-for="PricePerNight" class="text-danger"></span> <br />
    </div>

    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="IsAvailable" />
            <label class="form-check-label" asp-for="IsAvailable">Is Available</label>
        </div>
        <span asp-validation-for="IsAvailable" class="text-danger"></span> <br />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" asp-controller="Room" class="btn btn-secondary">Back to List</a>
</form>

@functions {
    public List<SelectListItem> GetRoomTypes()
    {
        return new List<SelectListItem>
        {
            new SelectListItem { Value = "Standard", Text = "Standard" },
            new SelectListItem { Value = "Deluxe", Text = "Deluxe" },
            new SelectListItem { Value = "Suite", Text = "Suite" }
        };
    }
}
